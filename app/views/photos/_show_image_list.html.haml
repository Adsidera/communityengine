- unless photos.empty?
  %ul.curblyadvimage_list
    - photos.each do |p|
      %li{:id => p.id, :class => @selected.eql?(p.id.to_s) ? 'selected' : ''}
        .thumbs
          = :insert.l + ":"
          %br
          %a{:href=>p.public_filename(:thumb), :onclick=>"select_thumb(this);return false;", :alt => p.display_name}
            = :thumb.l
          %a{:href=>p.public_filename(:medium), :onclick=>"select_thumb(this);return false;", :alt => p.display_name}
            = :medium.l
          %a{:href=>p.public_filename(), :onclick=>"select_thumb(this);return false;", :alt => p.display_name}
            = :large.l
          %br
          %a{:href=>'#', :onclick=>"$(this).up('li').removeClassName('selected');return false;", :style => 'float:right; font-size: 10px;'}
            = :cancel.l
        %a{:href=>'#', :onclick=>"select_image(this);return false;"}
          = image_tag( p.public_filename(:thumb), :alt => p.display_name )
- else
  = :no_images_uploaded_yet.l