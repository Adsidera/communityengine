<% if @comment.new_record? %>
  comment = $('#comment');
  comment.prepend("<%= (render 'shared/messages').gsub('"', '\\"').gsub("\n", '').html_safe %>");
  comment.scrollTo();
<% else %>
  <% if @comment.user && @comment.user.facebook? %>
    FB.ui(<%= FacebookPublisher.comment_created_hash(truncate_words(@comment.comment), commentable_url(@comment)) %>)
  <% end %>  
  
  $('#newest_comment').after("<%= (render :partial => 'comments/comment', :formats => [:html], :locals => {:comment => @comment, :highlighted => true}).gsub('"', '\\"').gsub("\n", '').html_safe %>");  
  tinyMCE.activeEditor.setContent('');
  $('#comment-<%= @comment.id.to_s %>').scrollTo();
<% end %>

$('#comment_spinner').addClass('hide');

<% if configatron.recaptcha_pub_key %>
  if($('dynamic_recaptcha')){
  	Recaptcha.create('<%= configatron.recaptcha_pub_key %>', $('dynamic_recaptcha') )
  }
<% end %>
          

