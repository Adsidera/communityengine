.clipping{:id => "clipping_#{clipping.id}"}
  %a{:href=>"#{user_clipping_url(clipping.user, clipping)}", :title => h(truncate_words(clipping.description)) }     
    = image_tag clipping.image_uri(:medium_square), :class => 'clipping_image'
  %p
    = h(truncate_words(clipping.description))

  - if favorite = clipping.has_been_favorited_by(current_user, request.remote_ip)
    .favorite
      = image_tag 'icons/heart_off.png', :plugin => 'community_engine'
      = clipping.favorited_count
      %br
      %small.quiet= link_to :in_your_favorites.l, user_favorite_path(current_user, favorite) if logged_in?    

      %small= link_to '(un-favorite)', favorite_path('clipping', clipping.id, favorite.id), :method => :delete, :remote => true, :id => "delete_#{clipping.id}", :data => { :clipping => "clipping_#{clipping.id}" }, :title => :un_favorite_this.l if logged_in?

    :javascript
      $('delete_#{clipping.id}').observe('ajax:before', function (event) {
        var element = $$('#clipping_#{clipping.id} .favorite img').first();
        new Effect.Fade(element);
        });
  - else
    .favorite  
      = link_to image_tag('icons/heart.png', :plugin => 'community_engine'), favorites_path('clipping', clipping.id), :method => "post", :id => "create_#{clipping.id}", :data => { :clipping => "clipping_#{clipping.id}" }, :remote => true, :title => :favorite_this.l
      = clipping.favorited_count
    :javascript
      $('create_#{clipping.id}').observe('ajax:before', function (event) {
        var element = $$('#clipping_#{clipping.id} .favorite img').first();
        new Effect.Pulsate(element);
        });